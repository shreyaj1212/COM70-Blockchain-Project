<h1>{{title}}</h1>
<p>By Shreya Jain and Grace Luettgen</p>

<h3 class="mt-4">Add a User to the Simulation</h3>
<form action="/api/makeUser" method="POST" class="mb-4">
    <div class="form-group">
         <label for="name">Name</label>
         <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
         <label for="wealth">Starting Wealth Amount (Recommended: 0)</label>
         <input type="number" name="wealth" class="form-control">
    </div>
    <input type="submit" value="Add User" class="btn btn-primary btn-block">
</form>

<h3 class="mt-4">List of Users Currently in the Simulation and Amount of Coin they Have</h3>
<ul class="list-group">
    {{#each users}}
    <li class="list-group-item">{{this.ipAddress}}: {{this.totalWealth}}</li>
    {{/each}}
</ul>

<h3 class="mt-4">Create A Transaction</h3>
<form action="/api/makeTransaction" method="POST" class="mb-4">
    <div class="form-group">
         <label for="sellerId">Giver Name</label>
         <input type="text" name="sellerId" class="form-control">
    </div>
    <div class="form-group">
         <label for="buyerId">Taker Name</label>
         <input type="text" name="buyerId" class="form-control">
    </div>
    <div class="form-group">
         <label for="amount">Amount</label>
         <input type="number" name="amount" class="form-control">
    </div>
    <div class="form-group">
        <label for="transactionSimType">Transaction Simulation Type</label>
        <input type="text" name="transactionSimType" class="form-control">
    </div>
    <input type="submit" value="Add Transaction" class="btn btn-primary btn-block">
</form>

<h3 class="mt-4">View The Blockchain So Far</h3>
<ul class="list-group mb-4">
    {{#each bcChain}}
    <li class="list-group-item">
        <p>{{this.precedingHash}}</p>
        <p>{{this.hash}}</p>
        {{#each this.data}}
        <p>{{this.seller.ipAddress}} gave {{this.buyer.ipAddress}} {{this.amt}} coins.</p>
        {{/each}}
        <p>{{this.proofOfWork}}</p>
    </li>
    {{/each}}
</ul>

